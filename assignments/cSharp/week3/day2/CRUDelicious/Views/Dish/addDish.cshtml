@{ ViewData["Title"] = "Add New Dish"; }

<h1>Add a New Dish!</h1>

@model Dish

<form asp-action="Create" asp-controller="Dish" method="post">
  <div class="inputs">
    <!--* CHEF NAME -->
    <section>
      <label asp-for="Chef">Chef's Name</label>
      <input asp-for="Chef" type="text" />
      <span asp-validation-for="Chef"></span>
    </section>

    <!--* DISH NAME -->
    <section>
      <label asp-for="Name">Name of Dish</label>
      <input asp-for="Name" type="text" />
      <span asp-validation-for="Name"></span>
    </section>

    <!--* CALORIES -->
    <section>
      <label asp-for="Calories"># of Calories</label>
      <input asp-for="Calories" type="int" />
      <span asp-validation-for="Calories"></span>
    </section>
  </div>

  <!--* TASTINESS -->
  <section>
    <label asp-for="Tastiness">Tastiness</label>
    <select asp-for="Tastiness">
      <option value="">Choose</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <span asp-validation-for="Tastiness"></span>
  </section>

  <!--* DESCRIPTION  -->
  <section>
    <label asp-for="Description"></label>
    <textarea asp-for="Description" cols="55" rows="7"></textarea>
    <span asp-validation-for="Description"></span>
  </section>

  <!--* BUTTONS -->
  <button>Add Dish</button>
</form>
